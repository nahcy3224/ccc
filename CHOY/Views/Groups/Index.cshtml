@model IEnumerable<CHOY.Models.Group>

@{
    ViewBag.Title = "My Group";
}
    <div class="page-container">
        <div class="index-inner">
            <h2>My Group</h2>

            <p>
                @Html.ActionLink("Create", "Create", "VMGroup")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Member.MemberID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GroupName)
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Member.MemberID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupName)
                        </td>
                        <td>
                            @Html.Action("_MemberInGroups", "Groups", new { gid = item.GroupID, mid = item.MemberID })
                            @*@Html.Action("_CreateMemberInGroups", "Groups", new { mid = item.MemberID, gid = item.GroupID })*@
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { mid = item.MemberID, gid = item.GroupID }, new { @class = "btn btn-warning" }) |

                            @Html.ActionLink("Delete", "Delete", new { mid = item.MemberID, gid = item.GroupID }, new { @class = "btn btn-warning", onclick = "return confirm('Are you sure you want to delete this Group?群組名稱【" + (item.GroupName) + "】')" })

                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.ActionLink("Add Member", "CreateMemberInGroups", new { gid = item.GroupID, mid = item.MemberID }, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }


            </table>
        </div>
    </div>